<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="modifiedEditText" parent="viewParent">
        <item name="android:textSize">18sp</item>

    </style>

    <style name="viewParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="cursiveText" parent="viewParent">
        <item name="fontFamily">@font/playball_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/extraLargeTextSize</item>
    </style>

    <style name="headerText" parent="viewParent">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/ptsans_bold</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalText" parent="viewParent">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/ptsans_regular</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalTextlite" parent="viewParent">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/ptsans_regular</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="smallText" parent="viewParent">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/ptsans_regular</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallTextlite" parent="viewParent">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/ptsans_regular</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CropTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
