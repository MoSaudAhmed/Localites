<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_marketRowdate"
            style="@style/smallTextlite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="end"
            android:text="date comes here"
            android:textAlignment="textEnd"
            android:textSize="@dimen/miniTextSize" />

        <ImageView
            android:id="@+id/img_marketRowImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_cover_one" />


        <TextView
            android:id="@+id/tv__marketRowTitle"
            style="@style/normalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:lines="1"
            android:text="Title comes here"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_marketRowBody"
            style="@style/smallTextlite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="3dp"
            android:gravity="start"
            android:lines="1"
            android:singleLine="true"
            android:text="Here comes the Body"
            android:textAlignment="textStart" />
    </LinearLayout>

</androidx.cardview.widget.CardView>